%h2 Details about: #{@movie.title}

%ul#details
  - if @movie.image.attached?
    = image_tag url_for(@movie.image), alt: "Movie Image", class: "movie-image"
  %li
    Rating:
    = @movie.rating
  %li
    Released on:
    = @movie.release_date.strftime("%B %d, %Y")
  %li
    Description:
    = @movie.description

%br
  = button_tag 'Back to movie list', type: 'button', onclick: "window.location='#{movies_path}'"
%br
  = button_tag 'Edit', type: 'button', onclick: "window.location='#{edit_movie_path(@movie.id)}'"

